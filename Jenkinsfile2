pipeline {
    agent any

    stages {
        stage('Install smbclient') {
            steps {
                script {
                    sh 'sudo apt-get update && sudo apt-get install -y smbclient'
                }
            }
        }

        stage('Access Windows Folder') {
            steps {
                script {
                    def windowsServer = 'windows-server'
                    def windowsUsername = 'your-username'
                    def windowsPassword = 'your-password'
                    def remoteSourceFolder = 'C:\\Path\\To\\Your\\Source\\Folder'
                    def remoteDestinationFolder = 'C:\\Path\\To\\Your\\Destination\\Folder'
                    def localFolder = '/path/to/local/folder'

                    sh "smbclient //${windowsServer}/C\$ -U ${windowsUsername}%${windowsPassword} -c 'lcd ${localFolder}; get ${remoteSourceFolder}/YourFile.txt'"
                }
            }
        }

        stage('Execute Python Script') {
            steps {
                script {
                    def pythonScript = 'path/to/your/python/remote_copy.py'
                    def sourceFolder = 'C:\\Path\\To\\Your\\Source\\Folder'
                    def destinationFolder = 'C:\\Path\\To\\Your\\Destination\\Folder'

                    sh "python ${pythonScript} ${sourceFolder} ${destinationFolder}"
                }
            }
        }
    }
}
